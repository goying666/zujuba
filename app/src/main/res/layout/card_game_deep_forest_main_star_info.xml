<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_game_deep_forest_star_image"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/yatelandisi_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_game_deep_forest_star_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="64sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/card_game_deep_forest_star_image"
            app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_image" />

        <TextView
            android:id="@+id/card_game_deep_forest_star_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="冥王星（4号星球）"
            android:textSize="@dimen/md_text_size_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_image" />

        <ImageView
            android:id="@+id/card_game_deep_forest_star_select_Image"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/select_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_image" />


        <TextView
            android:id="@+id/card_game_deep_forest_star_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="有情报"
            app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/card_game_deep_forest_star_text90"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="#e0e0e0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_name" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/card_game_deep_forest_star_messagePart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_text90"
            android:visibility="visible">

            <TextView
                android:id="@+id/card_game_deep_forest_star_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="情报等级"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_game_deep_forest_star_levelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="76dp"
                android:text="甲级"
                app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_level"
                app:layout_constraintStart_toStartOf="@+id/card_game_deep_forest_star_level"
                app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_level"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/card_game_deep_forest_star_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:text="探测时间"
                app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_levelValue"
                app:layout_constraintEnd_toStartOf="@+id/card_game_deep_forest_star_timeValue"
                app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_levelValue"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/card_game_deep_forest_star_timeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:text="第2回合"
                app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_time"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/card_game_deep_forest_star_text92"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#e0e0e0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_level" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/card_game_deep_forest_star_message_infoPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_text92">

                <TextView
                    android:id="@+id/card_game_deep_forest_star_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="文明代表"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/card_game_deep_forest_star_ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="8dp"
                    android:text="5号玩家"
                    app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_owner"
                    app:layout_constraintStart_toStartOf="@+id/card_game_deep_forest_star_owner"
                    app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_owner"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/card_game_deep_forest_star_text91"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#e0e0e0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_ownerName" />

                <TextView
                    android:id="@+id/card_game_deep_forest_star_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="科技值"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/card_game_deep_forest_star_owner"
                    app:layout_constraintTop_toBottomOf="@+id/card_game_deep_forest_star_text91"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/card_game_deep_forest_star_technologyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="8dp"
                    android:text="2"
                    app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_technology"
                    app:layout_constraintStart_toStartOf="@+id/card_game_deep_forest_star_technology"
                    app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_technology"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/card_game_deep_forest_star_defence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:text="防御值"
                    app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_technologyValue"
                    app:layout_constraintStart_toEndOf="@+id/card_game_deep_forest_star_technologyValue"
                    app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_technologyValue"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/card_game_deep_forest_star_defenceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="3"
                    app:layout_constraintBottom_toBottomOf="@+id/card_game_deep_forest_star_defence"
                    app:layout_constraintStart_toEndOf="@+id/card_game_deep_forest_star_defence"
                    app:layout_constraintTop_toTopOf="@+id/card_game_deep_forest_star_defence"
                    app:layout_constraintVertical_bias="1.0" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>





    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>