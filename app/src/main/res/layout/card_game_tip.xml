<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_32dp"
    android:layout_marginBottom="@dimen/margin_32dp">

    <ImageView
        android:id="@+id/card_game_tip_image"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:src="@drawable/lrs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_game_tip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="狼人杀"
        app:layout_constraintEnd_toEndOf="@+id/card_game_tip_image"
        app:layout_constraintStart_toStartOf="@+id/card_game_tip_image"
        app:layout_constraintTop_toBottomOf="@+id/card_game_tip_image" />
</android.support.constraint.ConstraintLayout>
