<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAndFragment.Game.lrs.GameLRSEditActivity">

    <include
        android:id="@+id/ConstraintLayout_toolbar"
        layout="@layout/widget_toolbar_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nullnest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView208"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="游戏人数"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TextView_sumOfPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="11"
                    app:layout_constraintEnd_toStartOf="@+id/Button_editSum"
                    app:layout_constraintStart_toEndOf="@+id/textView208"
                    app:layout_constraintTop_toBottomOf="@+id/textView208" />

                <Button
                    android:id="@+id/Button_editSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="修改人数"
                    app:layout_constraintBottom_toBottomOf="@+id/TextView_sumOfPlayer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/TextView_sumOfPlayer" />

                <Button
                    android:id="@+id/Button_quicklyEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorAccent"
                    android:text="快速设置"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TextView_sumOfPlayer" />

                <TextView
                    android:id="@+id/textView210"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="系统根据人数快速生成角色分配。"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/Button_quicklyEdit"
                    app:layout_constraintStart_toStartOf="@+id/Button_quicklyEdit"
                    app:layout_constraintTop_toBottomOf="@+id/Button_quicklyEdit" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/textView2221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:text="白狼王"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView213"
                    app:layout_constraintTop_toBottomOf="@+id/textView218" />

                <TextView
                    android:id="@+id/TextView_whiteWolf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfWolfman"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfWolfman"
                    app:layout_constraintTop_toTopOf="@+id/textView2221" />

                <TextView
                    android:id="@+id/textView213"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:text="狼人阵营"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TextView_allWolfNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView213"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView218"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="普通狼人"
                    app:layout_constraintStart_toStartOf="@+id/textView213"
                    app:layout_constraintTop_toBottomOf="@+id/textView213" />

                <TextView
                    android:id="@+id/TextView_sumOfWolfman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_allWolfNumber"
                    app:layout_constraintStart_toStartOf="@+id/TextView_allWolfNumber"
                    app:layout_constraintTop_toTopOf="@+id/textView218" />

                <ImageView
                    android:id="@+id/ImageView_wolfJian"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/ImageView_wolfAdd"
                    app:layout_constraintTop_toTopOf="@+id/TextView_sumOfWolfman"
                    app:srcCompat="@drawable/jian" />

                <ImageView
                    android:id="@+id/ImageView_wolfAdd"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ImageView_wolfJian"
                    app:srcCompat="@drawable/add_green" />

                <Switch
                    android:id="@+id/Switch_whiteWlof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="未选"
                    app:layout_constraintBottom_toBottomOf="@+id/TextView_whiteWolf"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/TextView_whiteWolf"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/textView226"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="猎人"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView222" />

                <TextView
                    android:id="@+id/TextView_lierenState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintTop_toTopOf="@+id/textView226" />

                <ImageView
                    android:id="@+id/ImageView_cunmingJian"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/TextView_cunmingState"
                    app:layout_constraintEnd_toStartOf="@+id/TextView_cunmingState"
                    app:layout_constraintTop_toTopOf="@+id/TextView_cunmingState"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/jian" />

                <ImageView
                    android:id="@+id/ImageView_cunmingAdd"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toEndOf="@+id/TextView_cunmingState"
                    app:layout_constraintTop_toTopOf="@+id/ImageView_cunmingJian"
                    app:srcCompat="@drawable/add_green" />

                <TextView
                    android:id="@+id/textView222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="女巫"
                    app:layout_constraintStart_toStartOf="@+id/textView2131"
                    app:layout_constraintTop_toBottomOf="@+id/textView2182" />

                <TextView
                    android:id="@+id/TextView_nvwuState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintTop_toTopOf="@+id/textView222" />

                <TextView
                    android:id="@+id/textView2131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:text="好人阵营"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TextView_sumOfGoodRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView2131"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2182"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="预言家"
                    app:layout_constraintStart_toStartOf="@+id/textView2131"
                    app:layout_constraintTop_toBottomOf="@+id/textView2131" />

                <TextView
                    android:id="@+id/TextView_yuyanjiaState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上场"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintTop_toTopOf="@+id/textView2182" />

                <Switch
                    android:id="@+id/Switch_yuyanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="已选"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2182"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView2182"
                    tools:checked="true" />

                <Switch
                    android:id="@+id/Switch_nvwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="未选"
                    app:layout_constraintBottom_toBottomOf="@+id/textView222"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView222" />

                <Switch
                    android:id="@+id/Switch_lieren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="未选"
                    app:layout_constraintBottom_toBottomOf="@+id/textView226"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView226" />

                <TextView
                    android:id="@+id/textView228"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="护卫"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView226" />

                <TextView
                    android:id="@+id/TextView_huweiState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选"
                    app:layout_constraintBottom_toBottomOf="@+id/textView228"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintTop_toTopOf="@+id/textView228" />

                <Switch
                    android:id="@+id/Switch_huwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="未选"
                    app:layout_constraintBottom_toBottomOf="@+id/textView228"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView228" />

                <TextView
                    android:id="@+id/textView230"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="白痴"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView228" />

                <TextView
                    android:id="@+id/TextView_baichiState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未选"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintTop_toTopOf="@+id/textView230" />

                <Switch
                    android:id="@+id/Switch_baichi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="未选"
                    app:layout_constraintBottom_toBottomOf="@+id/textView230"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView230" />

                <TextView
                    android:id="@+id/textView232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:text="村民"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView230" />

                <TextView
                    android:id="@+id/TextView_cunmingState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    app:layout_constraintEnd_toEndOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintStart_toStartOf="@+id/TextView_sumOfGoodRole"
                    app:layout_constraintTop_toTopOf="@+id/textView232" />

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消修改" />

        <Button
            android:id="@+id/Button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认修改" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>