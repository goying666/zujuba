                    app:layout_constraintStart_toEndOf="@+id/TextView_lieren"
                    app:layout_constraintTop_toTopOf="@+id/textView236" />

                <TextView
                    android:id="@+id/TextView_huwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    app:layout_constraintStart_toEndOf="@+id/textView252"
