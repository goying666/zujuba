<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_marginSize"
    android:layout_marginEnd="@dimen/card_marginSize"
    android:layout_marginStart="@dimen/card_marginSize"
    android:layout_marginTop="@dimen/card_marginSize"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_info_other"
            android:layout_width="@dimen/message_image_width"
            android:layout_height="@dimen/message_image_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<TextView-->
        <!--android:id="@+id/message_info_other_content"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginStart="68dp"-->
        <!--android:text=""-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toStartOf="@+id/message_info_me"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="@+id/message_info_other" />-->

        <TextView
            android:id="@+id/message_info_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="66dp"
            android:layout_marginStart="66dp"
            android:background="@drawable/left_message"
            android:gravity="left"
            app:layout_constraintBottom_toBottomOf="@+id/message_info_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/message_info_other" />

        <ImageView
            android:id="@+id/message_info_me"
            android:layout_width="@dimen/message_image_width"
            android:layout_height="@dimen/message_image_height"
            android:layout_marginEnd="8dp"
            android:src="@drawable/girl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/message_info_other" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>