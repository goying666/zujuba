<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/game_info_world_map_card_image"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:src="@drawable/yatelandisi_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_info_world_map_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:text="4"
            android:textSize="64sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/game_info_world_map_card_image" />

        <TextView
            android:id="@+id/game_info_world_map_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginStart="16dp"
            android:text="亚特兰蒂斯"
            android:textSize="@dimen/md_text_size_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_info_world_map_card_image" />

        <TextView
            android:id="@+id/game_info_world_map_card_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="城镇"
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_name"
            app:layout_constraintStart_toEndOf="@+id/game_info_world_map_card_name" />

        <TextView
            android:id="@+id/game_info_world_map_card_doWhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="交易/占卜/打探/回收"
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/game_info_world_map_card_friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:text="友好度："
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/game_info_world_map_card_name"
            app:layout_constraintTop_toBottomOf="@+id/game_info_world_map_card_name" />

        <TextView
            android:id="@+id/game_info_world_map_card_friends_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="5"
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_friends_text"
            app:layout_constraintStart_toEndOf="@+id/game_info_world_map_card_friends_text"
            app:layout_constraintTop_toTopOf="@+id/game_info_world_map_card_friends_text" />

        <TextView
            android:id="@+id/game_info_world_map_card_danger_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="危险度："
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_friends_text"
            app:layout_constraintStart_toEndOf="@+id/game_info_world_map_card_friends_num"
            app:layout_constraintTop_toTopOf="@+id/game_info_world_map_card_friends_text" />

        <TextView
            android:id="@+id/game_info_world_map_card_danger_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_friends_text"
            app:layout_constraintStart_toEndOf="@+id/game_info_world_map_card_danger_text"
            app:layout_constraintTop_toTopOf="@+id/game_info_world_map_card_friends_text" />

        <TextView
            android:id="@+id/game_info_world_map_card_move_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="移动体力："
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_move_spend"
            app:layout_constraintEnd_toStartOf="@+id/game_info_world_map_card_move_spend"
            app:layout_constraintTop_toTopOf="@+id/game_info_world_map_card_move_spend" />

        <TextView
            android:id="@+id/game_info_world_map_card_move_spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="0/1"
            app:layout_constraintBottom_toBottomOf="@+id/game_info_world_map_card_friends_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/game_info_world_map_card_friends_text" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
