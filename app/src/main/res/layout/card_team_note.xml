<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_player_info_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorNoSelect">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="21:22"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/team_note_conten"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:text="已到场"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/card_time"
            app:layout_constraintStart_toEndOf="@+id/card_time"
            app:layout_constraintTop_toTopOf="@+id/card_time"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/team_note_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全市10佳"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin_16dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_time" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>